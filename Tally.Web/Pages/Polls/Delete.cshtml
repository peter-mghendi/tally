@page "/polls/{id:int}/delete"
@model Tally.Web.Pages.Polls.Delete

@{
    ViewData["Title"] = "Delete Poll";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this poll?</h3>

<p class="lead">Deleting a poll from Tally will delete it across all sites where it was administered.</p>
<p class="lead">If you want to conclude the poll instead, please do so from the <a asp-page="./Details" asp-route-id="@Model.Poll.Id">Details</a> page</p>

<div>
    <h4>Poll</h4>
    <hr/>
    <partial name="Shared/_PollData" model="Model.Poll" />

    <form method="post">
        <input type="hidden" asp-for="Poll.Id"/>
        <input type="submit" value="Delete" class="btn btn-danger"/> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>