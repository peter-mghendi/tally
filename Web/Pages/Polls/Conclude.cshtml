@page "/polls/{id:int}/conclude"
@model Web.Pages.Polls.Conclude

@{
    ViewData["Title"] = "Conclude Poll";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to conclude this poll?</h3>

<p class="lead">Concluding a poll from Tally will conclude it across all sites where it was administered.</p>
<p class="lead">After concluding a poll, it may keep running on the platforms it was administered on, but Tally will no longer monitor its results.</p>
<p class="lead">If you want to delete the poll instead, please do so from the <a asp-page="./Details" asp-route-id="@Model.Poll.Id">Details</a> page</p>

<div>
    <h4>Poll</h4>
    <hr/>
    <partial name="Shared/_PollData" model="Model.Poll" />

    <form method="post">
        <input type="hidden" asp-for="Poll.Id"/>
        <input type="submit" value="Conclude" class="btn btn-warning"/> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>